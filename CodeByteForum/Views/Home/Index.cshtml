@model CodeByteForum.ViewModels.PostsListViewModel;
@{
    ViewData["Title"] = "Home Page";
}
@section Styles {
    <link href="@Url.Content("~/css/home-index.css")" rel="stylesheet" type="text/css" />
}
<div class="container">
    <div class="row">
        <div class="col-md-9">
            @foreach (var post in Model.Posts)
            {
                <div class="post">
                    <p class="post-meta"><a href="#">@post.Sender</a> @post.PublishDate.ToString("dd/MM/yyyy HH:mm")</p>
                    <ul class="tags">
                        @foreach (var tag in post.Tags)
                        {
                            <li><a href="#">@tag</a></li>
                        }
                    </ul>
                    <br />
                    <h4 class="post-title">@post.Title</h4>
                    <p>@post.Text</p>
                    <hr />
                    <a class="button-read"
                       asp-action="Question"
                       asp-controller="Post"
                       asp-route-id="@post.Id">
                        Читать далее...
                    </a>
                </div>
            }
        </div>
        <div class="col-md-3">
            <div class="sidebar">
                <div class="header">Фильтр постов</div>
                <div class="main">
                    <form method="get">
                        Поиск:<input name="searchTitle" type="text" />
                        Тэги:<input  type="text" />
                        <input type="submit" value="Применить" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
